<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <UseWPF>true</UseWPF>
    <LangVersion>8.0</LangVersion>
    <NullableContextOptions>enable</NullableContextOptions>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="DecorationsWindow.xaml" />
    <None Remove="ExpanderWindow.xaml" />
    <None Remove="FramesWindow.xaml" />
    <None Remove="Images\apple1.jpg" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Images\apple1.jpg" />
  </ItemGroup>

  <ItemGroup>
    <ApplicationDefinition Update="App.xaml">
      <SubType>Designer</SubType>
    </ApplicationDefinition>
  </ItemGroup>

  <ItemGroup>
    <Page Update="DecorationsWindow.xaml">
      <SubType>Designer</SubType>
    </Page>
    <Page Update="ExpanderWindow.xaml">
      <SubType>Designer</SubType>
    </Page>
    <Page Update="FramesWindow.xaml">
      <SubType>Designer</SubType>
    </Page>
    <Page Update="MainWindow.xaml">
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>

</Project>