<Page
    x:Class="ControlsSamples.Views.CalendarPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ControlsSamples.Views"
    xmlns:conv="using:ControlsSamples.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <conv:CalendarDisplayModeConverter x:Key="CalendarConverter" />
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <AppBarButton Icon="Back" Click="OnBack" />
        <ComboBox SelectedItem="{x:Bind CurrentDisplayMode, Mode=TwoWay}" ItemsSource="{x:Bind DisplayModes, Mode=OneTime}" Grid.Row="1" Margin="12" />
        <CalendarView x:Name="calendarView1" MinDate="{x:Bind MinDate, Mode=OneTime}" Grid.Row="2" DisplayMode="{x:Bind CurrentDisplayMode, Mode=TwoWay, Converter={StaticResource CalendarConverter}}" SelectedDatesChanged="OnDateSelected" Margin="12" />
        <DatePicker Grid.Row="3" />
    </Grid>
</Page>
